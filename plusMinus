public static void plusMinus(List<int> arr)
    {
        
        int p=0, m=0, z=0;
         
        for(int i=0; i<arr.Count; i++)
        {
            if(arr[i]<0) m++;
            else if(arr[i]>0) p++;
            else z++;
        }
        
        Console.WriteLine(string.Format("{0:N7}", (float)p/arr.Count));
        Console.WriteLine(string.Format("{0:N7}", (float)m/arr.Count));
        Console.WriteLine(string.Format("{0:N7}", (float)z/arr.Count));
    }
